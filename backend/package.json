{
  "name": "resume-backend",
  "version": "1.0.0",
  "description": "简历管理应用后端",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:auto": "npm run setup && node server.js",
    "start:debug": "node server.js",
    "dev": "nodemon server.js",
    "dev:auto": "npm run setup && nodemon server.js",
    "setup": "npm run migrate && npm run seed",
    "setup:force": "npm run migrate:rollback && npm run migrate && npm run seed",
    "start:prod": "pm2 start ecosystem.config.js --env production",
    "start:dev": "pm2 start ecosystem.config.js --env development",
    "stop": "pm2 stop resume-backend",
    "restart": "pm2 restart resume-backend",
    "reload": "pm2 reload resume-backend",
    "delete": "pm2 delete resume-backend",
    "status": "pm2 status",
    "logs": "pm2 logs resume-backend",
    "logs:error": "pm2 logs resume-backend --err",
    "logs:out": "pm2 logs resume-backend --out",
    "monit": "pm2 monit",
    "save": "pm2 save",
    "resurrect": "pm2 resurrect",
    "startup": "pm2 startup",
    "health": "node scripts/health-check.js --once",
    "health:monitor": "node scripts/health-check.js",
    "monitor": "node scripts/service-monitor.js",
    "monitor:auto": "node scripts/service-monitor.js --auto-fix",
    "monitor:verbose": "node scripts/service-monitor.js --verbose",
    "start:safe": "npm run health && npm run start:dev || npm run start",
    "quick-fix": "npm run stop 2>/dev/null; pkill -f 'node server.js' 2>/dev/null; npm run start:safe",
    "migrate": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "migrate:status": "knex migrate:status",
    "seed": "node scripts/seed.js",
    "migrate:unified": "node scripts/run-unified-schema-migration.js",
    "migrate:unified-db": "node scripts/run-unified-schema-migration.js --database-only",
    "migrate:unified-data": "node scripts/run-unified-schema-migration.js --data-only",
    "migrate:complete": "node scripts/complete-data-migration.js",
    "migrate:complete:run": "node scripts/run-complete-migration.js",
    "migrate:complete:test": "node scripts/test-complete-migration.js",
    "migrate:existing": "node scripts/migrate-existing-data.js",
    "test:unified": "node scripts/test-unified-schema.js",
    "init:dev": "node scripts/init-dev-environment.js",
    "setup:permissions": "node scripts/init-dev-environment.js"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.2.1",
    "fs-extra": "^11.3.0",
    "handlebars": "^4.7.8",
    "ioredis": "^5.3.2",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "knex": "^2.5.1",
    "mammoth": "^1.9.1",
    "multer": "^2.0.1",
    "mustache": "^4.2.0",
    "node-cron": "^4.2.1",
    "openai": "^5.8.1",
    "pdf-parse": "^1.1.1",
    "pdf2pic": "^3.2.0",
    "pg": "^8.11.3",
    "puppeteer": "^24.11.2",
    "tencentcloud-sdk-nodejs": "^4.1.66",
    "tesseract.js": "^6.0.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
